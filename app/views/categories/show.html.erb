<h1> <%= @category.name %></h1>
<div class="min-h-screen flex justify-center">
  <div class="flex flex-wrap flex-col mt-6">
    <h2 class="text-lg text-gray-800">Filters</h2>
  </div>
  <div class="flex flex-wrap mt-6 gap-10 flex-grow justify-center items-start">
    <% if @product.empty? %>
    <p class="text-gray-800">No products found</p>
    <% else %>
      <% @product.each do |product| %>
        <%= link_to product_path(product) do %>
          <div class="max-w-sm flex flex-col p-4 justify-center items-center">
            <%= product.images.present? ? image_tag(url_for(product.images.first.variant(:medium)), class: "rounded") : image_tag("https://via.placeholder.com/250", class: "rounded") %>
            <h2 class="text-gray-800 font-medium text-lg text-center mb-6 uppercase">
              <%= product.name %>
            </h2>
          </div>
        <% end %>
      <% end %>
    <% end %>

  </div>
</div>
