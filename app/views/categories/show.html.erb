<h1> <%= @category.name %></h1>
<div class="min-h-screen flex justify-center">
  <div class="flex flex-wrap flex-col mt-6 p-4">
    <h2 class="text-lg text-gray-800">Filters</h2>
    <%= form_with url: category_path(@category), method: :get, class: "flex flex-col gap-4" do |f| %>
      <%= f.number_field :min, placeholder: "Min Price", class: "border border-gray-800 rounded-md p-2 w-32" %>
      <%= f.number_field :max, placeholder: "Max Price", class: "border border-gray-800 rounded-md p-2 w-32" %>
      <%= f.submit "Filter", class: "bg-gray-800 text-white p-2 rounded-md w-32" %>
  <% end %>
    <%= form_with url: category_path(@category), method: :get, class: 'flex' do |form| %>
      <%= form.submit "Clear", class: "bg-gray-800 text-white p-2 rounded-md w-32 mt-2"  %>
    <% end %>

  </div>
  <div class="flex flex-wrap mt-6 gap-10 flex-grow justify-center items-start">
    <% if @product.empty? %>
    <p class="text-gray-800">No products found</p>
    <% else %>
      <% @product.each do |product| %>
        <%= link_to product_path(product) do %>
          <div class="max-w-sm flex flex-col p-4 justify-center items-center">
            <%= product.images.present? ? image_tag(url_for(product.images.first), class: "rounded w-72 h-96") : image_tag("https://via.placeholder.com/250", class: "rounded") %>
            <h2 class="text-gray-800 font-medium text-lg text-center mb-6 uppercase">
              <%= product.name %>
            </h2>
          </div>
        <% end %>
      <% end %>
    <% end %>

  </div>
</div>
