<div class="bg-gray-800 text-white text-center py-20">
  <h1 class="text-5xl font-bold mb-4">Subscribe to our newsletter</h1>
  <p class="text-xl mb-8">Get the latest news and updates & offers from Onisa Designs</p>
  <%= form_with url: root_path, method: :post, class: 'flex justify-center' do |f| %>
    <div class="flex flex-col md:flex-row gap-4">
      <%= f.email_field :email, class: 'bg-gray-700 text-white p-2 rounded', placeholder: 'Enter your email' %>
      <%= f.submit 'Subscribe', class: 'bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded' %>
    </div>
  <% end %>
</div>