<div id="<%= dom_id product %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Images:</strong>
    <% if product.images.any? %>
    <div class="flex gap-4">
      <% product.images.each do |image| %>
        <%= image_tag image, class: ' h-40' %>
      <% end %>
    </div>
  <% end %>


  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= product.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= product.content %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Price:</strong>
    <%= product.price %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Category:</strong>
    <%= product.category.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Active:</strong>
    <%= product.active %>
  </p>

</div>
