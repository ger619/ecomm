<div class="flex gap-10 flex-col md:flex-row justify-between w-full">
  <div class="max-w-sm rounded overflow-hidden shadow-xl bg-gradient-to-r from-gray-400 to-gray-300 ">
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2 text-gray-50 ">Revenue</div>
      <p class="text-gray-700 text-base">
        kshs: <%= @quick_stats[:revenue] ? (@quick_stats[:revenue]/1.0).to_s : "0" %>
      </p>
    </div>

  </div>

  <div class="max-w-sm rounded overflow-hidden shadow-xl bg-gradient-to-r from-gray-400 to-gray-300 ">
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2 text-gray-50 ">Total Sales</div>
      <p class="text-gray-700 text-base">
        <%= @quick_stats[:sales] ? (@quick_stats[:sales]).to_s : "0" %>
      </p>
    </div>

  </div>


  <div class="max-w-sm rounded overflow-hidden shadow-xl bg-gradient-to-r from-gray-400 to-gray-300 ">
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2 text-gray-50 ">Average Sale</div>
      <p class="text-gray-700 text-base">
        kshs: <%= @quick_stats[:average_sale] ? (@quick_stats[:average_sale]/1.0).to_s : "0" %>
      </p>
    </div>

  </div>

  <div class="max-w-sm rounded overflow-hidden shadow-xl bg-gradient-to-r from-gray-400 to-gray-300 ">
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2 text-gray-50 ">Items/Sale</div>
      <p class="text-gray-700 text-base">
        <%= @quick_stats[:per_sale].to_i  %>
      </p>
    </div>

  </div>

</div>