<div class = "flex flex-col w-full">
  <h2 class="text-2xl text-gray-800 mb-4 font-medium"> Recently Unfulfilled Order</h2>
  <div class="overflow-x-auto">
    <table class="min-w-full bg-gray-100" style="border-collapse: separate; border-spacing: 0;">
      <thead>
      <tr class="text-gray-800">
        <th class="py-6 px-3 border-b-2 border-gray-200 bg-gray-100 font-semibold uppercase text-sm text-left">Order ID</th>
        <th class="py-2 px-3 border-b-2 border-gray-200 bg-gray-100 font-semibold uppercase text-sm text-left">Customer</th>
        <th class="py-2 px-3 border-b-2 border-gray-200 bg-gray-100 font-semibold uppercase text-sm text-left">Date</th>
        <th class="py-2 px-3 border-b-2 border-gray-200 bg-gray-100 font-semibold uppercase text-sm text-left">Amount</th>
      </tr>
      </thead>
      <tbody class="text-gray-700">
      <% @orders.each do |o| %>
        <tr>
          <td class="py-2 px-3 border-b border-gray-200 bg-white text-sm underline"><%= link_to o.id, admin_order_path(o) %></td>
          <td class="py-2 px-3 border-b border-gray-200 bg-white text-sm"><%= o.customer_email %></td>
          <td class="py-2 px-3 border-b border-gray-200 bg-white text-sm"><%= o.created_at.strftime("%d %b %Y %H:%M") %></td>
          <td class="py-2 px-3 border-b border-gray-200 bg-white text-sm">kshs: <%= o.total %></td>
        </tr>
      <% end %>

      </tbody>
    </table>
  </div>

</div>